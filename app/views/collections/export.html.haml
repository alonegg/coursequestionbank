
%div.section_title 
  %h3 
    Export Collection
    = link_to @collection.name, collection_path(:id => @collection.id)
  %h4= @collection.description
  - if @collection.is_public
    %h5= @collection.instructor.name
  
%div.section_options
  = link_to "Preview quiz", preview_path(:id => @collection.id), :class => 'btn btn-info'

%div.section_body
  %ul.nav.nav-tabs
    // %li
    //   %a{"data-toggle" => "tab", :href => "#sectionA"} Preview Quiz
    %li.active
      %a{"data-toggle" => "tab", :href => "#section_ruql"} RuQL Code
    %li
      %a{"data-toggle" => "tab", :href => "#section_html"} HTML Code
  
  %div.tab-content#export-content
    // #sectionA.tab-pane.fade.in.active
    //   %h3 Preview Quiz
    //   %h6
    //     = @html_code.html_safe
    %div#section_ruql.tab-pane.active
      %h3 RuQL Code
      %textarea.source_field{:wrap => 'hard', :readonly => 'true'}
        = preserve @ruql_code
    %div#section_html.tab-pane
      %h3 HTML Code
      %textarea.source_field{:wrap => 'hard', :readonly => 'true'}
        = preserve @html_code

    
